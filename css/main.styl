@import 'mixins.styl'

*
	bbox()

body, html
	rect 100%
	margin 0
	padding 0
	overflow hidden
	font-family monospace

gs = 10px
mainColor = #ccc
.checkbox-e
	margin 200px
	border-radius: 2*gs
	width 10*gs
	height 4*gs
	border 1px solid mainColor
	display block
	position relative
	cursor pointer

	input
		opacity: 0
		position: relative
		z-index: 4
		hl green
		width 100%
		height 100%
		cursor: pointer

		&:checked
			& + label
				left 100%
				transform rotate(180deg)
				margin-left - 4*gs + 1px


	label
		rect 4*gs
		border 1px solid mainColor
		border-radius 50%
		position absolute
		background white
		top -1px
		left -1px
		font-size 4*gs
		color mainColor
		text-align center
		transition all .5s linear

		&:before
			content ''
			position absolute
			rect 2px
			background mainColor
			z-index: 1
			border-radius 50%
			top  50%
			left 30%
			box-shadow 15px 0 0 mainColor
			margin-top  -1px
			margin-left -1px

		&:after
			content '‚å£'
			position absolute
			top  60%
			left 30%
			font-size 18px
			


