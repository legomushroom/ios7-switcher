@import 'mixins.styl'

*
	bbox()

body, html
	rect 100%
	margin 0
	padding 0
	overflow hidden
	font-family monospace

gs = 10px
.checkbox-e
	margin 200px

	input
		opacity: 0

	label
		border-radius: 2*gs
		width 10*gs
		height 4*gs
		border 1px solid #ccc
		display block
		position relative
		cursor pointer

		&:after
			content ''
			rect 4*gs
			border 1px solid #ccc
			border-radius 50%
			position absolute
			background white
			top -2px
			left -2px
			font-size 4*gs
			color #ccc
			text-align center
			-webkit-transform rotate(90deg)

		&:before
			content ''
			position absolute
			color black
			


